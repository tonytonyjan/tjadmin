<div class="page-header position-relative">
  <h1>
    Listing posts
    <small>
      <i class="icon-double-angle-right"></i>
      Static &amp; Dynamic Tables
    </small>
  </h1>
</div><!--/.page-header-->

<table id="sample-table-1" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="center">
        <label>
          <input type="checkbox" class="ace" />
          <span class="lbl"></span>
        </label>
      </th>
              <th>Title</th>
              <th>Content</th>
            <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td class="center">
        <label>
          <input type="checkbox" class="ace" />
          <span class="lbl"></span>
        </label>
      </td>

              <td><%= post.title %></td>
              <td><%= post.content %></td>
      
      <td>
        <div class="hidden-phone visible-desktop btn-group">
          <button class="btn btn-mini btn-success">
            <i class="icon-ok bigger-120"></i>
          </button>

          <%= link_to edit_post_path(post), class: 'btn btn-mini btn-info' do %>
            <i class="icon-edit bigger-120"></i>
          <% end %>

          <%= link_to post, class: 'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="icon-trash bigger-120"></i>
          <% end %>

          <button class="btn btn-mini btn-warning">
            <i class="icon-flag bigger-120"></i>
          </button>
        </div>

        <div class="hidden-desktop visible-phone">
          <div class="inline position-relative">
            <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
              <i class="icon-cog icon-only bigger-110"></i>
            </button>

            <ul class="dropdown-menu dropdown-icon-only dropdown-yellow pull-right dropdown-caret dropdown-close">
              <li>
                <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                  <span class="blue">
                    <i class="icon-zoom-in bigger-120"></i>
                  </span>
                </a>
              </li>

              <li>
                <%= link_to edit_post_path(post), class: 'tooltip-success', :'data-rel' => 'tooltip', title: 'Edit' do %>
                  <span class="green">
                    <i class="icon-edit bigger-120"></i>
                  </span>
                <% end %>
              </li>

              <li>
                <%= link_to post, class: 'tooltip-error', :'data-rel' => 'tooltip', title: 'Delete', method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="red">
                    <i class="icon-trash bigger-120"></i>
                  </span>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="hr hr-18 dotted hr-double"></div>